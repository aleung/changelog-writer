{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "newLine": "LF",
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2020"
  },
  "include": ["**/*.ts", "src/**/*.ts", "test/**/*.ts"]
}
